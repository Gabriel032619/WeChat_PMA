.page_container {
  position: relative;
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search_container {
  position: fixed;
  top: 20px;
  left: 20px;
  right: 20px;
  display: flex;
  margin-bottom: 20px;
  z-index: 10; /* 确保搜索框在最上层 */
  background-color: white;
}

.search_container input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.search_container button {
  padding: 10px;
  margin-left: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.member_list {
  position: absolute;
  top: 70px; /* 搜索框的高度 + 上下 padding */
  bottom: 70px; /* 添加按钮的高度 + 上下 padding */
  left: 20px;
  right: 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  overflow-y: scroll;
}

.no_results {
  text-align: center;
  color: #999;
  font-size: 16px;
}

.member_item {
  background-color: white;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 5px;
  width: 80%;
}

.member_info_row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5px 0;
  flex-wrap: wrap; /* 允许内容换行 */
}

.label {
  font-weight: bold;
  flex: 1 1 40%; /* 确保标签部分不会太窄 */
}

.value {
  flex: 1 1 60%; /* 确保值部分可以自适应宽度 */
  word-wrap: break-word;
  text-align: right;
}

.add_member_button {
  position: fixed;
  bottom: 20px;
  left: 20px;
  right: 20px;
  text-align: center;
  z-index: 10; /* 确保按钮在最上层 */
}

.add_member_button button {
  width: 100%;
  padding: 10px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
