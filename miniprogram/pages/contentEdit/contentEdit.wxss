.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.main {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.button_row {
  width: 100%;
  margin-bottom: 20px;
}

.button {
  width: 100%;
  padding: 20px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10px;
  text-align: center;
  font-size: 36rpx;
  cursor: pointer;
  background-color: rgb(35, 206, 64);
}
