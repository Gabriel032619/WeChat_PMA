.page_container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.student_info {
  background-color: white;
  padding: 30px;
  border: 1px solid #ddd;
  border-radius: 10px;
  margin-bottom: 30px;
}

.student_info_row {
  display: flex;
  justify-content: space-between;
  padding: 15px 0;
}

.label {
  font-weight: bold;
  font-size: 20px;
}

.value {
  word-wrap: break-word;
  text-align: right;
  flex: 1;
  font-size: 20px;
}

input.value {
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
  text-align: right;
  font-size: 20px;
}

button {
  background-color: #007aff;
  color: white;
  padding: 15px;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  text-align: center;
  font-size: 20px;
}
