.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.image-item {
  margin: 10px;
  width: 100px;
  height: 100px;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.upload-button {
  margin-top: 20px;
  width: 200px;
  height: 50px;
  background-color: #007acc;
  color: white;
  font-size: 16px;
  text-align: center;
  line-height: 50px;
  border-radius: 25px;
}
