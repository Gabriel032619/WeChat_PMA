.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  flex-direction: column;
}

.main {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.input_area {
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  font-size: 35rpx;
  background-color: #fff;
}

.submit_button {
  width: 100%;
  padding: 20rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10rpx;
  text-align: center;
  font-size: 36rpx;
  cursor: pointer;
}
