.page_container {
  background-color: white;
  /* height: 120vh; */
  font-family: PingFang SC;
}

.top_bg {
  background-color: transparent;
  width: 100%;
  height: 30%;
}

.manager_btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 1;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(120vh - 120rpx);
  position: relative;
  background-image: linear-gradient(to bottom, #ccffcc 20%, transparent 40%);
}

.userinfo_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 50rpx;
  position: relative;
  top: 30%;
  padding: 0rpx 60rpx;
  font-size: 60rpx;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  transform: scale(1.8);
  background-color: rgb(207, 255, 216);
}

.user_info_row {
  display: flex;
  align-items: center;
}

.settings_container {
  position: relative;
  top: 450rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: center;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
  width: 90%;
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting_icon {
  width: 80rpx;
  height: 80rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
  font-size: 50rpx;
  text-align: center;
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}

.contact-button {
  padding: 10rpx 0rpx;
  width: 100%;
  font-size: 50rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: center;
}

.pen {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal_content {
  width: 300px;
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal_content input {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.modal_content button {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.modal_content button:last-child {
  background-color: #ddd;
  color: #333;
}
